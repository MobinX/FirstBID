{
    "manifest_version": 3,
    "name": "First Bid",
    "version": "1.0",
    "description": "Bid your freelancing project just in eye blink. First Bid is a chrome extension that helps you to bid your project in just one click.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "views/popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "webNavigation",
        "webRequest",
        "alarms",
        "cookies",
        "identity"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}
